{
  "plugins": ["standard", "jasmine"],
  "env": {
    "jasmine": true
  },
  "extends": ["standard", "plugin:jasmine/recommended", "prettier"],
  "rules": {
    "arrow-parens": ["error"],
    "semi": 0,
    "object-curly-spacing": ["error", "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "block-like",
        "next": "return"
      },
      {
        "blankLine": "always",
        "prev": "const",
        "next": "return"
      }
    ],
    "max-len": [
      "error",
      {
        "code": 80,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "jasmine/new-line-before-expect": 0,
    "jasmine/no-spec-dupes": [1, "branch"],
    "jasmine/no-focused-tests": 0
  }
}
